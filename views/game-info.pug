extends layout

block content
    body.game-info-page
        .game-info-body
            .game-info-wrapper
                .game-info-title-wrapper
                    p.game-title #{game.title}
                .game-info-image-wrapper
                    img(src=`${game.url}`, alt=`${game.title}`)
                .game-info-description-wrapper
                    p.game-info-metaScore MetaScore: #{game.metaScore}
                    .game-info-add-comment
                        p.game-info-add-comment-text Add Comment
                    .game-info-review-wrapper
                        each review in reviews
                            p.game-info-review-username #{review.User.username}:
                            p.game-info-review-content #{review.content}
                            p.game-info-review-timestamp #{review.createdAt}
                            .game-info-review-underline
