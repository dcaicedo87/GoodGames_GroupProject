include utils.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='/stylesheets/register.css')
        title Register
    body(class='register-form-container')
        div(class='register-form')
            form(action="/users/register" method="post")
                +validationErrorSummary(errors)
                input(type="hidden" name="_csrf" value=csrfToken)
                lable(class="username-label") Username
                +field("", "username", user.username)
                lable(class="email-label") Email
                +field("", "email", user.email)
                lable(class="password-label") Password
                +field("","password", user.password, "password")
                lable(class="confirm-password-label") Confirm Password
                +field("", "confirmPassword", "", "password")
                div(class="registerBtnContainer")
                    button(class="registerBtn" type="submit") Register
                div(class='cancelBtnContainer')
                    a(href="/")
                        button(class='cancelBtn' type="button") Cancel
